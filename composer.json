{
    "name": "fourgb/video-renamer-bot",
    "description": "Advanced Telegram Video Renamer Bot with Permanent Filename Templates",
    "type": "project",
    "license": "MIT",
    "version": "2.0.0",
    "keywords": [
        "telegram",
        "bot",
        "video",
        "renamer",
        "php",
        "madelineproto"
    ],
    "homepage": "https://github.com/fourgb/video-renamer-bot",
    "authors": [
        {
            "name": "FourGB Team",
            "email": "support@fourgb.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zip": "*",
        "ext-sockets": "*",
        "danog/madelineproto": "^8.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.5",
        "ramsey/uuid": "^4.0",
        "symfony/process": "^6.0",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "FourGB\\VideoRenamerBot\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "FourGB\\VideoRenamerBot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "bot": "php index.php",
        "test": "phpunit",
        "post-autoload-dump": []
    },
    "scripts-descriptions": {
        "start": "Start development server",
        "bot": "Run Telegram bot",
        "test": "Run tests"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "danog/madelineproto": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
